{
  "version": 2,
  "builds": [
    {
      "src": "frontend/app/index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/app/dist" }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/app/dist/$1"
    }
  ]
}